<!DOCTYPE html>

<html>
@{
    var session = Session["Account"] as Myblog_website.Models.tblAccount;
    //var name_nickname = Session["nickName"] as Myblog_website.Models.tblUser;
    //var img_link_avata = Session["avata-img"].ToString();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/387c89d594.js" crossorigin="anonymous"></script>
    <link href="~/Content/Style/Layout-style.css" rel="stylesheet" />
</head>
<body>
    @*header*@
    <div class="navbar">
        <div class="nav-header">
            <div class="header-contact">
                <div class="icon-contact">
                    <a><i class="fab fa-facebook-square"></i></a>
                    <a><i class="fab fa-twitter"></i></a>
                    <a><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="header-logo">
                <h2>My Blogg</h2>
            </div>
            <div class="header-txtsearch">
                <div class="space-2"></div>
                <div class="main-search">
                    <input type="text" class=" txt-search" />
                    <button class="btn-search"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </div>
        <div class="nav-menu">
            <div class="space-1"></div>
            <div class="menu">
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a>Categories</a></li>
                    <li><a>Blog</a></li>
                    <li><a href="@Url.Action("About","Home")">About</a></li>
                    <li><a>Contact</a></li>
                </ul>
            </div>
            <div class="nav-user">
                <div class="space-3"></div>
                @if (session == null)
                {
                    <div class="login_join">
                        <a href="@Url.Action("Index_Login","Login")"><i class="fas fa-sign-in-alt"></i></a>
                    </div>
                }
                else
                {
            <div class="login_join">
                @if (Session["avata-img"] == null)
                {
                    <img class="img-avata" src="~/Content/images/avata-default.png" />
                }
                else
                {
                    <img class="img-avata" src="~/Content/images/avata1.jpg" />
                }
                <ul class="menu-lv1">
                    <li>
                        <a href="@Url.Action("Profile_Page","Home")">@Session["nickName"]</a>
                        <ul class="menu-lv2">
                            <li><a href="@Url.Action("Log_Out","Login")"><i class="fas fa-sign-out-alt"></i></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
                }
            </div>
        </div>
    </div>
    @*end header*@

    <div class="container body-content" style="margin-top: 10px;">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer">
                <div class="ft ft-folow">
                    <div class="title">
                        <h3>Follow Us</h3>
                    </div>
                    <ul>
                        <li><a><i class="fab fa-facebook-square"></i></a></li>
                        <li><a><i class="fab fa-twitter"></i></a></li>
                        <li><a><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
                <div class="ft ft-contact">
                    <div class="title">
                        <h3>Contact</h3>
                    </div>
                </div>
                <div class="ft ft-about">
                    <div class="title">
                        <h3>About Us</h3>
                    </div>
                </div>
                <div class="ft ft-support">
                    <div class="title">
                        <h3>Support</h3>
                    </div>
                </div>
            </div>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
